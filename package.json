{
    "name": "portfolio",
    "version": "0.0.2",
    "private": true,
    "license": "MIT",
    "scripts": {
        "prebuild": "npm install",
        "build": "svelte-kit build",
        "check": "svelte-check --tsconfig tsconfig.json",
        "check:watch": "svelte-check --tsconfig tsconfig.json --watch",
        "dev": "svelte-kit dev",
        "docker:buildx86": "docker build ./ --platform=linux/amd64 -t us-central1-docker.pkg.dev/deft-bazaar-370800/portfolio/portfolio:$npm_package_version -t us-central1-docker.pkg.dev/deft-bazaar-370800/portfolio/portfolio:latest",
        "docker:buildrelease": "npm run build && npm run docker:buildx86",
        "docker:check": "./scripts/checkForDockerDaemon.sh",
        "docker:pushrelease": "docker push us-central1-docker.pkg.dev/deft-bazaar-370800/portfolio/portfolio:$npm_package_version && docker push us-central1-docker.pkg.dev/deft-bazaar-370800/portfolio/portfolio:latest",
        "docker:release": "npm run docker:buildrelease && npm run docker:pushrelease",
        "gcp:release": "gcloud run deploy portfolio --image us-central1-docker.pkg.dev/deft-bazaar-370800/portfolio/portfolio:latest",
        "git:pushtags": "git push --tags && git push",
        "lint": "eslint --ignore-path .gitignore svelte-kit",
        "print:release": "echo \"\n\\033[0;32m  <==  Released Client v$npm_package_version  ==>  \\033[0m\n\"",
        "package": "svelte-kit package",
        "preview": "svelte-kit preview",
        "preversion": "npm run docker:check",
        "postversion": "npm run git:pushtags && npm run docker:release && sleep 5 && npm run gcp:release && npm run print:release"
    },
    "devDependencies": {
        "@fortawesome/free-brands-svg-icons": "^6.0.0",
        "@fortawesome/free-solid-svg-icons": "^6.0.0",
        "@sveltejs/adapter-static": "next",
        "@sveltejs/kit": "next",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-svelte3": "^3.2.1",
        "svelte": "^3.44.0",
        "svelte-check": "^2.2.6",
        "svelte-fa": "^2.4.0",
        "svelte-preprocess": "^4.10.1",
        "tslib": "^2.3.1",
        "typescript": "~4.5.4"
    },
    "type": "module"
}
